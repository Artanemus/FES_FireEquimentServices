Attribute VB_Name = "mdlHRFind"
Option Compare Database
Option Explicit

Private mRunning As Boolean
Private mReturnValue As Variant
Private mOpenArgs As String

' +-----------------------------------------------------------
' |
' |  properties for communicating with _HRFind
' |
Public Property Get Running() As Boolean
Running = mRunning
End Property

Public Property Let ReturnValue(X As Variant)
mReturnValue = X
End Property

Public Property Get ReturnValue() As Variant
ReturnValue = mReturnValue
End Property

' +-----------------------------------------------------------
' |
' |  Find HR
' |
Private Sub RunDialog()
Dim msg As String
On Error GoTo PROC_ERR
    mRunning = True
    DoCmd.OpenForm "_HRFind", , , , , acDialog, mOpenArgs
    DoCmd.Close acForm, "_HRFind"
    mRunning = False
PROC_EXIT:
    On Error Resume Next
    Exit Sub

PROC_ERR:
    ' display the system error
    If err.Number <> 0 Then
        msg = "mdlHRFind RunDialog" & vbCrLf & _
        "Error # " & CStr(err.Number) & " was generated by " & err.Source & vbCrLf & err.Description
        MsgBox msg, , "Error", err.HelpFile, err.HelpContext
    End If
    Resume PROC_EXIT
End Sub

